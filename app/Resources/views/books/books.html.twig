{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <p><a href="{{ path("new_book") }}" class="button">Create New Book</a></p>
    <p>Filters <a href="{{ path("all_books") }}">All</a> | <a href="overdue_books.html">Overdue</a> | <a
                href="{{ path('books_checked') }}">Checked Out</a></p>
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Year Released</th>
        </tr>
        </thead>
        <tbody>
        {% if books is defined %}
            {% for book in books %}
                <tr>
                    <td><a href="{{ path('book_detail', {'id': book.id }) }}">{{ book.title }}</a></td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.genre }}</td>
                    <td>{{ book.firstPublished }}</td>
                </tr>
            {% endfor %}
        {% else %}
            {% for loan in loans %}
                <tr>
                    <td><a href="{{ path('book_detail', {'id': loan.book.id }) }}">{{ loan.book.title }}</a></td>
                    <td>{{ loan.book.author }}</td>
                    <td>{{ loan.book.genre }}</td>
                    <td>{{ loan.book.firstPublished }}</td>
                </tr>
            {% endfor %}
        {% endif %}

        </tbody>
    </table>
{% endblock %}