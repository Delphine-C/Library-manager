{% extends 'base.html.twig' %}

{% block title %}Loans{% endblock %}

{% block body %}
    <h1>Loans</h1>
    <p><a href="{{ path('new_loan') }}" class="button">Create New Loan</a></p>
    <p>Filters <a href="{{ path('all_loans') }}">All</a> | <a href="overdue_loans.html">Overdue</a> | <a
                href="checked_loans.html">Checked Out</a></p>
    <table>
        <thead>
        <tr>
            <th>Book</th>
            <th>Patron</th>
            <th>Loaned on</th>
            <th>Return by</th>
            <th>Returned on</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for loan in loans %}
            <tr>
                <td><a href="{{ path("book_detail", {'id': loan.book.id }) }}">{{ loan.book.title }}</a></td>
                <td><a href="{{ path("patron_detail", {'id': loan.patron.id }) }}">{{ loan.patron.firstName }} {{ loan.patron.lastName }}</a></td>
                <td>{{ loan.loanedOn|date('Y-m-d') }}</td>
                <td>{{ loan.returnBy|date('Y-m-d') }}</td>
                <td>{% if loan.returnedOn is null %}
                    {% else %}{{ loan.returnedOn|date('Y-m-d') }}
                    {% endif %}</td>
                <td><a href="{{ path('return_book', {'id': loan.id }) }}" class="button">Return Book</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}